<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_sleeping"/>

    <ImageView
        android:id="@+id/yellow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellowActionBar" />

    <TextView
        android:id="@+id/centerStatistics"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/centerStatistics"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:text="@string/tonight_you_slept_for" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/centerStatistics"

        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:text=":"/>

    <TextView
        android:id="@+id/hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:textColor="@android:color/white"
        android:layout_toLeftOf="@id/centerStatistics"
        android:layout_below="@id/centerStatistics"
        android:layout_marginRight="10dp"
        android:text="0"/>

    <TextView
        android:id="@+id/minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="100sp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/centerStatistics"
        android:layout_below="@id/centerStatistics"
        android:layout_marginLeft="10dp"
        android:text="0"/>


    <TextView
        android:id="@+id/hoursText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/centerStatistics"
        android:layout_below="@id/hours"
        android:layout_alignLeft="@id/hours"
        android:layout_alignRight="@id/hours"

        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:text="@string/hours"/>

    <TextView
        android:id="@+id/minutesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/minutes"
        android:layout_alignRight="@id/minutes"
        android:layout_alignLeft="@id/minutes"

        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:text="@string/minutes"/>


    <ImageView
        android:id="@+id/doneButtonSleepStatistics"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/green_round_button"
        android:onClick="Done"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/doneButtonSleepStatistics"
        android:layout_alignRight="@id/doneButtonSleepStatistics"
        android:layout_alignBottom="@id/doneButtonSleepStatistics"
        android:layout_alignTop="@id/doneButtonSleepStatistics"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:text="Done"
        android:onClick="Done"/>


</RelativeLayout>